<% content_for(:title) do %>Statistiques de présence<% end %>

<% form_tag({ :action => "index" }, :class => "centered") do -%>
	<%= label_tag :team_id, "Voir les statistiques de l'équipe : " %>
	<%= select :team, :id, @team_list.collect {|t| [ t.name, t.id ] } %>
	<%= submit_tag "OK" %>
<% end -%>

<% form_tag :action => "index" do %>
<%= hidden_field_tag "team[id]", @team.id %>
<hr/>
<h4>Période :</h4>
<p>
	<%= radio_button_tag :type, :sprint %>
	<%= label_tag :sprint_id, "Sprint : " %>
	<%= select :sprint, :id, @team.sprints.sort_by { |sprint| sprint.name }.collect {|t| [ t.name, t.id ] } %>
</p>
<p>
	<%= radio_button_tag :type, :month %>
	<%= label_tag :date, "Mois : " %>
	<%= select_month Date.today.month %>
	<%= select_year Date.today.year %>
</p>
<p>
	<%= radio_button_tag :type, :period %>
	<%= label_tag :start_date, "Du : " %>
	<%= text_field_tag :start_date, {}, { :class => 'datepicker' } %>&nbsp;&nbsp;
	<%= label_tag :end_date, "au : " %>
	<%= text_field_tag :end_date, {}, { :class => 'datepicker' } %>
</p>
<%= simple_datepicker_for "start_date" %>
<%= simple_datepicker_for "end_date" %>
<p>
	<%= submit_tag "Valider" %>
</p>
<hr/>
<% end -%>

<% content_for(:sidebar) do %>
<div class="box">
	<h3>Aide</h3>
	<ul>
		<li>Consulter ici les jours consommés ainsi que les prévisions de présences.</li>
	</ul>
</div>
<% end -%>

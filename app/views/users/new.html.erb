<h3>Créer un utilisateur</h3>

<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>

<% form_for :user, :url => users_path, :html => { :class => 'MainForm' } do |f| -%>

	<%= label_tag 'login', 'Login' %>
	<%= f.text_field :login %>

	<%= label_tag 'email', "Email" %>
	<%= f.text_field :email %>

	<%= label_tag 'password', 'Mot de passe:'  %>
	<%= f.password_field :password %>

	<%= label_tag 'password_confirmation', 'Confirmez le mot de passe:' %>
	<%= f.password_field :password_confirmation %>

	<p><%= submit_tag 'Valider' %></p>
<% end -%>


<% content_for(:sidebar) do %>
	<div class="box">
		<h3>Aide</h3>
	</div>
	<div class="box alt">
		<h3>Attention</h3>
		<p>Après avoir créer un utilisateur, n'oubliez pas de lui affecter lui un rôle et une équipe. </p>
	</div>
<% end -%>

<% content_for(:head) do %>
	<script type='text/javascript'>
	  document.getElementById('login').focus()
	</script>
<% end -%>

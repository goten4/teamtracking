<% content_for(:title) do %>Créer un utilisateur<% end -%>

<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>

<% form_for :user, :url => users_path, :html => { :class => 'MainForm' } do |f| -%>

<%= label_tag 'login', 'Login' %>
<%= f.text_field :login %>

<%= label_tag 'name', 'Nom' %>
<%= f.text_field :name %>

<%= label_tag 'email', "Email" %>
<%= f.text_field :email %>

<%= label_tag 'password', 'Mot de passe:'  %>
<%= f.password_field :password %>

<%= label_tag 'password_confirmation', 'Confirmez le mot de passe:' %>
<%= f.password_field :password_confirmation %>

<%= label_tag 'company', 'Société / Statut:' %>
<%= f.collection_select(:job_id, Job.find(:all), :id, :company_name_and_title, {:prompt => true}) %>

<p><%= submit_tag 'Valider' %></p>
<% end -%>

<%= link_to 'Retour', users_path %>
<%= render :partial => 'help_box' %>

<% content_for(:head) do %>
<script type='text/javascript'>
document.getElementById('login').focus()
</script>
<% end -%>
